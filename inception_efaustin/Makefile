	@$(EC) "Use: make [OPÃ‡ÃƒO] | OpÃ§Ã£o padrÃ£o: all"
	@$(EC) "\nOpÃ§Ãµes:"
	@$(EC) "\nall	= ğŸ”¨ construir e ğŸš€ iniciar o projeto"
	@$(EC) "clean	= â›” parar os servicos e ğŸ—‘ï¸ limpÃ¡-los"
	@$(EC) "fclean	= â›” parar e ğŸ—‘ï¸ limpar tudo"
	@$(EC) "re	= ğŸ”¨ reconstruir e ğŸš€ reiniciar tudo"
	@$(EC) "\nmkfolder  = ğŸ“ cria os diretÃ³rios dos volumes"
	@$(EC) "mksecrets = ğŸ” cria arquivos de secrets"
	@$(EC) "rmsecrets = ğŸ§¨ remove arquivos de secrets"
	@$(EC) "\nbuild	= ğŸ”¨ construindo imagens do Docker"
	@$(EC) "up	= ğŸš€ inicia os serviÃ§os em modo detached"
	@$(EC) "down	= ğŸ›‘ para e remove os serviÃ§os"
	@$(EC) "remove	= ğŸ—‘ï¸ remove containers e volumes"
	@$(EC) "\nstop	= â›” para os containers"
	@$(EC) "start	= â–¶ï¸ inicia os containers"
	@$(EC) "restart	= â›” para e volta a â–¶ï¸ iniciar os containers"
	@$(EC) "\nlist	= lista ğŸ“¦ containers e ğŸ–¼ï¸ imagens"
	@$(EC) "logs	= exibi ğŸ“œ logs dos serviÃ§os"
