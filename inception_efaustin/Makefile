-include .env

# My var(s)
NAME			=	inception
EC				=	echo
RM				=	rm -rf
MK				=	mkdir -p

DCK				=	docker
DCPS			=	docker-compose
DCPS_CMD		=	$(DCPS) -f ./srcs/docker-compose.yml

DT_DIR			=	/home/efaustin/data
DB_DIR			=	$(DT_DIR)/mariadb
WP_DIR			=	$(DT_DIR)/wordpress
ADMINER_DIR		=	$(DT_DIR)/adminer
SECRETS_DIR		=	./secrets

# My rule(s)
all: mkfolder mksecrets build up

mkfolder:
	@$(EC) "\nğŸ“ Criando os diretÃ³rios dos volumes..."
	@$(MK) $(DT_DIR)
	@$(MK) $(DB_DIR)
	@$(MK) $(WP_DIR)
	@$(MK) $(ADMINER_DIR)
	@$(EC) "âœ… DiretÃ³rios dos volumes prontos com permissÃµes."

mksecrets:
	@$(EC) "\nğŸ” Criando arquivos de secrets..."
	@$(MK) $(SECRETS_DIR)
	@$(EC) "$(DB_PASS)" > $(SECRETS_DIR)/db_pass.txt
	@$(EC) "$(DB_RTPASS)" > $(SECRETS_DIR)/db_root_pass.txt
	@$(EC) "$(WP_PASS)" > $(SECRETS_DIR)/wp_editor_pass.txt
	@$(EC) "$(WP_PASS2)" > $(SECRETS_DIR)/wp_user_pass.txt
	@$(EC) "âœ… Arquivos de secrets criados."

rmsecrets:
	@$(EC) "\nğŸ§¨ Removendo arquivos de secrets..."
	@$(RM) $(SECRETS_DIR)/*
	@$(EC) "âœ… Arquivos de secrets removidos."

build:
	@$(EC) "\nğŸ”¨ Construindo imagens do Docker..."
	@$(DCPS_CMD) build

up:
	@$(EC) "\nğŸš€ Iniciando serviÃ§os..."
	@$(DCPS_CMD) up -d

down:
	@$(EC) "\nğŸ›‘ Parando serviÃ§os..."
	@$(DCPS_CMD) down

remove: down
	@$(EC) "\nğŸ—‘ï¸ Removendo containers e volumes..."
	@$(DCK) volume prune -f
	@$(DCK) container prune -f

stop:
	@$(EC) "\nâ›” Parando containers..."
	@$(DCPS_CMD) stop

start:
	@$(EC) "\nâ–¶ï¸ Iniciando containers..."
	@$(DCPS_CMD) start

restart: stop start

clean: down remove

fclean: clean rmsecrets

re: fclean all

list:
	@$(EC) "\nğŸ“¦ Listando containers:"
	@$(DCK) ps -a
	@$(EC) "\nğŸ–¼ï¸ Listando imagens:"
	@$(DCK) images -a

logs:
	@$(EC) "\nğŸ“œ Exibindo logs dos serviÃ§os..."
	@cd srcs && $(DCPS) logs mariadb wordpress nginx adminer website

status:
	@$(EC) "\nğŸ” Status dos containers:"
	@$(DCK) ps

